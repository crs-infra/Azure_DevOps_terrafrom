#!/bin/bash
# Azure Service Principal Environment Variables
# Copy this file to set-azure-env.sh and fill in your actual credentials
# Source the file before running Terraform: source set-azure-env.sh

export ARM_CLIENT_ID="your-client-id-here"
export ARM_CLIENT_SECRET="your-client-secret-here"
export ARM_SUBSCRIPTION_ID="your-subscription-id-here"
export ARM_TENANT_ID="your-tenant-id-here"

echo "Azure environment variables set successfully"
echo "ARM_CLIENT_ID: $ARM_CLIENT_ID"
echo "ARM_TENANT_ID: $ARM_TENANT_ID"
echo "ARM_SUBSCRIPTION_ID: $ARM_SUBSCRIPTION_ID"
